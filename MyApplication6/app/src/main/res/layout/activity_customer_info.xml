<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".customer_info">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="order summary  "
            android:layout_marginTop="50dp"
            android:textColor="@color/white"
            android:background="@color/gray"
            android:paddingLeft="10sp"
            android:paddingTop="8dp"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/total"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="0"
            android:layout_marginTop="50dp"
            android:textColor="@color/white"
            android:background="@color/gray"
            android:layout_marginLeft="270dp"
            android:paddingTop="8dp"
            android:textSize="20dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="L.E"
            android:layout_marginTop="50dp"
            android:textColor="@color/white"
            android:background="@color/gray"
            android:layout_marginLeft="320dp"
            android:paddingTop="8dp"
            android:textSize="20dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Contact information"
            android:layout_marginTop="150dp"
            android:textColor="@color/gray"
            android:background="@color/white"
            android:paddingLeft="10sp"
            android:paddingTop="8dp"
            android:textSize="25dp" />
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/gray"
            android:background="@color/light"
            android:paddingLeft="10sp"
            android:paddingTop="5dp"
            android:hint="Enter Your Email"
            android:textSize="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Shipping address"
            android:layout_marginTop="300dp"
            android:textColor="@color/gray"
            android:background="@color/white"
            android:paddingLeft="10sp"
            android:paddingTop="8dp"
            android:textSize="25dp" />
        <EditText
            android:id="@+id/fn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="350dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/gray"
            android:background="@color/light"
            android:paddingLeft="10sp"
            android:paddingTop="5dp"
            android:hint="First name"
            android:textSize="15dp" />
        <EditText
            android:id="@+id/ln"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="410dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/gray"
            android:background="@color/light"
            android:paddingLeft="10sp"
            android:paddingTop="5dp"
            android:hint="Last name"
            android:textSize="15dp" />
        <EditText
            android:id="@+id/addr"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="470dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/gray"
            android:background="@color/light"
            android:paddingLeft="10sp"
            android:paddingTop="5dp"
            android:hint="Address"
            android:textSize="15dp" />
        <EditText
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="530dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/gray"
            android:background="@color/light"
            android:paddingLeft="10sp"
            android:paddingTop="5dp"
            android:hint="Location"
            android:textSize="15dp" />
        <EditText
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="590dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/gray"
            android:background="@color/light"
            android:paddingLeft="10sp"
            android:paddingTop="5dp"
            android:hint="City"
            android:textSize="15dp" />
        <EditText
            android:id="@+id/code"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="650dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/gray"
            android:background="@color/light"
            android:paddingLeft="10sp"
            android:paddingTop="5dp"
            android:hint="Postal code"
            android:textSize="15dp" />
        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="710dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/gray"
            android:background="@color/light"
            android:paddingLeft="10sp"
            android:paddingTop="5dp"
            android:hint="Phone"
            android:textSize="15dp" />


        <Button
            android:id="@+id/btn_checkout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="790dp"
            android:background="@color/black"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:text="Continue to shipping"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Refound policy"
            android:textColor="@color/gray"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="880dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Terms of service"
            android:textColor="@color/gray"
            android:layout_marginTop="880dp"
            android:layout_marginLeft="150dp"/>v

    </RelativeLayout>

</ScrollView>